    "url": "https://github.com/justfarming/contracts/issues"
  },
  "homepage": "https://github.com/justfarming/contracts#readme",
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "ethers": "^6.7.1",
    "hardhat": "^2.17.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@types/dotenv": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
